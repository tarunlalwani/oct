{
  "name": "@oct/core",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./test-utils": {
      "import": "./dist/test-utils/in-memory-storage-adapter.js",
      "types": "./dist/test-utils/in-memory-storage-adapter.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/test-utils/in-memory-storage-adapter.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "neverthrow": "^6.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
